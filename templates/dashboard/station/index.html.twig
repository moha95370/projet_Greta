{% extends 'clean.html.twig' %}

{% block title %}Profil de {{app.user.displayName}}!{% endblock %}

{% block content %}
<!-- Page Header-->
        <header class="masthead" style="background-image: url('{{asset('clean/assets/img/install-bg.jpg')}}')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Mes Bornes</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>

<!-- Main Content-->
    <div class="container-fluid px-4">
        <h1 class="mt-4">Gestion des bornes</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Bornes</li>
            <li class="breadcrumb-item active">Liste :</li>
        </ol>
        <div>
            <a class="btn btn-primary mb-4" href="{{ path('dashboard_station_add')}}">Ajouter</a>
            <a class="btn btn-primary mb-4" href="{{ path('dashboard_station_index') }}" class="btn btn-primary">Demande de maintenance</a>
        </div>

            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Lieu</th>
                        <th>Adresse</th>
                        <th>Date de création</th>
                        <th>Disponibilité</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!--une ligne du tableau-->
                    {% for station in stations %}
                    <tr>
                    <td>{{ station.id }}</td>
                    <td>{{ station.name }}</td>
                    <td>{{ station.type.name }}</td>
                    <td>{{ station.place.name }}</td>
                    <td>{{ station.address }}</td>
                    <td>{{ station.createdAt | date }}</td>
                    <td>{{ ( station.availability == true ) ? 'Dispo' : 'Non dispo' }}</td>
                    <td>
                        <a href="{{ path('dashboard_station_update', {id: station.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                    </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

         
        </div>
{% endblock %}
