{% extends 'clean.html.twig' %}

{% block title %}{{ h1 }}!{% endblock %}

{% block content %}
<!-- Page Header-->
        <header class="masthead" style="background-image: url('{{asset('clean/assets/img/install-bg.jpg')}}')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>{{ h1 }}</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>

<!-- Main Content-->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">

                <!-- Sidebar avec les derniers articles-->
                <div class="col-md-10 col-lg-8 col-xl-7">

                    <!-- Post preview-->                    
                    {% for post in posts %}

                        <div class="post-preview">
                            <a href="{{ path('post_view', {slug: post.slug}) }}">
                                <h3 class="post-title">{{ post.title }}</h3>
                                <img src="{{ post.image }}" alt="" style="width: 100%">
                                <h3 class="post-subtitle">{{ post.content | u.truncate(160, '...') | striptags | raw }}</h3>
                            </a>
                            <p class="post-meta">Rédigé par
                                <a href="#">{{ post.user.displayName }}</a>
                                {{ post.createdAt | ago }} - Classé dans {{ post.category.name }}
                            </p>
                        </div>
                        <!-- Divider-->
                        <hr class="my-4" />
                                
                    {% endfor %}
                    

                    

                    <!-- Pager-->
                    <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a></div>
                </div>
                <!-- Sidebar avec les anciens articles-->
                <div class="col-lg-4 col-md-4 mx-auto">

                    <!-- Widget anciens articles-->
                    <h2>Les anciens articles</h2>
                    
                    {% for oldPost in oldPosts %}
                        <div class="post-preview">
                            <a href="{{ path('post_view', {slug: oldPost.slug}) }}">
                                <h2 class="post-subtitle">{{ oldPost.title }}</h2>
                            </a>
                            <p class="post-meta">{{ oldPost.createdAt | ago }}</p>
                        </div>
                    {% endfor %}

                    <!-- Widget filtre catégories-->
                    <h2>Les catégories</h2>
                    
                    {% for category in categories %}
                        <div class="post-preview">
                            <a href="{{ path('post_category', {slug: category.slug}) }}">
                                <p class="post-subtitle">{{ category.name }}</p>
                            </a>
                        </div>
                    {% endfor %}

                </div>

                
            </div>
        </div>
{% endblock %}
