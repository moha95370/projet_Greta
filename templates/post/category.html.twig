{% extends 'clean.html.twig' %}

{% block title %}{{ category.name }}!{% endblock %}

{% block content %}
<!-- Page Header-->
        <header class="masthead" style="background-image: url('{{asset('clean/assets/img/install-bg.jpg')}}')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>category : {{ category.name }}</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>

<!-- Main Content-->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">

                <!-- Sidebar avec les derniers articles-->
                <div class="col-md-10 col-lg-8 col-xl-7">


                    <!-- Post preview-->
                    
                    {% for post in category.posts %}

                        <div class="post-preview">
                            <a href="{{ path('post_view', {slug: post.slug}) }}">
                                <h3 class="post-title">{{ post.title }}</h3>
                                <img src="{{ post.image }}" alt="" style="width: 100%">
                                <h3 class="post-subtitle">{{ post.content | u.truncate(150, '...') | raw}}</h3>
                            </a>
                            <p class="post-meta">Rédigé par
                                <a href="#">{{ post.user.displayName }}</a>
                                {{ post.createdAt | ago }}
                            </p>
                        </div>
                        <!-- Divider-->
                        <hr class="my-4" />
                                
                    {% endfor %}
                    

                
            </div>
        </div>
{% endblock %}
