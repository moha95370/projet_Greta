{% extends 'sbadmin.html.twig' %}

{% block title %}Gestion du type d'installation!{% endblock %}

{% block final_stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
{% endblock %}

{% block content %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Gestion du type d'installation</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Type d'installation</li>
            <li class="breadcrumb-item active">Liste :</li>
        </ol>

        <a class="btn btn-primary mb-4" href="{{ path('admin_type_add')}}">Ajouter</a>
        
        <!-- Tableau  -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                DataTable
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Slug</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--une ligne du tableau-->
                        {% for type in types %}
                        <tr>
                        <td>{{ type.id }}</td>
                        <td>{{ type.name }}</td>
                        <td>{{ type.slug }}</td>
                        <td>
                            <a href="{{ path('admin_type_update', {id: type.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            <a href="{{ path('admin_type_delete', {id: type.id, _csrf_token: csrf_token('delete')}) }}" class="btn btn-danger btn-sm"  onclick="return confirm('Etes-vous certain ?')">Supprimer</a>
                        </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Slug</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block final_javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="{{ asset('sbadmin/js/datatables-simple-demo.js')}}"></script>
{% endblock %}
